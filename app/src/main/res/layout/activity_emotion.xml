<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keenon.peanut.demo.device.EmotionDemo">


    <TextView
        android:id="@+id/tv_emotion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="表情"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_emotion_happy"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:text="happy"
        android:textAllCaps="false"
        app:layout_constraintDimensionRatio="h,3:2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_emotion_title" />

    <Button
        android:id="@+id/bt_emotion_sad"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:text="sad"
        app:layout_constraintBottom_toBottomOf="@+id/bt_emotion_happy"
        app:layout_constraintLeft_toRightOf="@+id/bt_emotion_happy"
        app:layout_constraintRight_toLeftOf="@+id/bt_emotion_sleepy"
        app:layout_constraintTop_toTopOf="@+id/bt_emotion_happy"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bt_emotion_sleepy"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="0dp"
        android:text="sleepy"
        app:layout_constraintBottom_toBottomOf="@+id/bt_emotion_sad"
        app:layout_constraintLeft_toRightOf="@+id/bt_emotion_sad"
        app:layout_constraintTop_toTopOf="@+id/bt_emotion_sad" />


</androidx.constraintlayout.widget.ConstraintLayout>
