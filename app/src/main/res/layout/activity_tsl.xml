<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/iot_tsl_device_name"
        android:textSize="24dp" />
    <RelativeLayout
        android:id="@+id/property_layout"
        android:layout_below="@id/device_name"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Spinner
            android:id="@+id/spinner_light"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"/>
        <EditText
            android:layout_toRightOf="@id/spinner_light"
            android:layout_toLeftOf="@+id/start_light_button"
            android:id="@+id/tv_density"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/iot_tsl_hint"
            android:gravity="center_vertical"
            android:background="@null"/>
        <Button
            android:id="@+id/start_light_button"
            android:layout_alignParentRight="true"
            android:onClick="postProperty"
            android:hint="input json string"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="属性上报"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/property_layout"
        android:id="@+id/event_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="80dp">
        <Spinner
            android:id="@+id/event_spinner"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"/>
        <EditText
            android:layout_toRightOf="@id/event_spinner"
            android:layout_toLeftOf="@+id/post_event_button"
            android:id="@+id/event_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/iot_tsl_hint"
            android:gravity="center_vertical"
            android:background="@null"/>
        <Button
            android:id="@+id/post_event_button"
            android:layout_alignParentRight="true"
            android:onClick="postEvent"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="事件上报"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/event_layout"
        android:id="@+id/service_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="80dp">
        <Spinner
            android:id="@+id/service_spinner"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"/>
        <EditText
            android:layout_toRightOf="@id/service_spinner"
            android:layout_toLeftOf="@+id/exec_service_button"
            android:id="@+id/service_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/iot_tsl_hint"
            android:gravity="center_vertical"
            android:background="@null"/>
        <Button
            android:id="@+id/exec_service_button"
            android:layout_alignParentRight="true"
            android:onClick="execService"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="服务调用"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/service_layout"
        android:focusable="false"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="@string/iot_tsl_data_format"/>
</RelativeLayout>